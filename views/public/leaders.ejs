<%- include('../partials/header') %>

<h1>Onze Leiding</h1>
<hr>

<% Object.keys(groups).forEach(groupName => { %>
    <% if(groups[groupName].length > 0) { %>
        <h3 class="mt-4 mb-3 group-header group-<%= groupName.toLowerCase().replace(/[^a-z]/g, '') %>"><%= groupName %></h3>
        
        <% if (groups[groupName].length > 4) { %>
            <!-- Carousel Layout for many items -->
            <div class="leader-carousel mb-4">
                <% groups[groupName].forEach(leader => { %>
                    <div class="leader-card-wrapper" 
                         data-leader="<%= JSON.stringify(leader) %>"
                         onclick="openLeaderModal(this)">
                        <div class="card h-100 leader-card">
                            <% if(leader.image) { %>
                                <img src="<%= leader.image %>" class="card-img-top" alt="<%= leader.name %>" 
                                     style="height: 250px; object-fit: cover;" draggable="false" ondragstart="return false;">
                            <% } else { %>
                                <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 250px;">Geen foto</div>
                            <% } %>
                            <div class="card-body text-center">
                                <h5 class="card-title"><%= leader.name %></h5>
                                <small class="text-muted"><%= leader.years_active %> jaar leiding</small>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <!-- Standard Grid Layout for few items -->
            <div class="row">
                <% groups[groupName].forEach(leader => { %>
                    <div class="col-md-6 col-lg-3 mb-4" style="cursor: pointer;" 
                         data-leader="<%= JSON.stringify(leader) %>"
                         onclick="openLeaderModal(this)">
                        <div class="card h-100 leader-card">
                            <% if(leader.image) { %>
                                <img src="<%= leader.image %>" class="card-img-top" alt="<%= leader.name %>" style="height: 250px; object-fit: cover;">
                            <% } else { %>
                                <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 250px;">Geen foto</div>
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title"><%= leader.name %></h5>
                                <p class="card-text">
                                    <small class="text-muted"><%= leader.years_active %> jaar leiding</small><br>
                                    <strong>Studie/Werk:</strong> <%= leader.study %>
                                    <% if(leader.extra_info) { %>
                                        <br>
                                        <span class="fst-italic text-muted small"><%= leader.extra_info %></span>
                                    <% } %>
                                </p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    <% } %>
<% }) %>

<!-- Zwoele Modal -->
<div class="modal fade" id="leaderModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <img id="modalImage" src="" class="leader-modal-img" alt="Leader">
            <div class="modal-header border-0 pb-0">
                <h2 class="modal-title w-100 text-center" id="modalName"></h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center px-4 pb-5">
                <p class="text-muted mb-1"><span id="modalYears"></span> jaar leiding</p>
                <h5 class="mb-3 text-primary" id="modalStudy"></h5>
                <p class="lead fst-italic" id="modalExtra"></p>
            </div>
        </div>
    </div>
</div>

<script>
    function openLeaderModal(element) {
        const leaderJson = element.getAttribute('data-leader');
        if (!leaderJson) return;
        
        const leader = JSON.parse(leaderJson);
        
        document.getElementById('modalName').textContent = leader.name;
        document.getElementById('modalYears').textContent = leader.years_active;
        document.getElementById('modalStudy').textContent = leader.study || '';
        document.getElementById('modalExtra').textContent = leader.extra_info || '';
        
        const img = document.getElementById('modalImage');
        if (leader.image) {
            img.src = leader.image;
            img.style.display = 'block';
        } else {
            img.style.display = 'none';
        }

        const myModal = new bootstrap.Modal(document.getElementById('leaderModal'));
        myModal.show();
    }
</script>

<%- include('../partials/footer') %>