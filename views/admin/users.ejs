<%- include('../partials/header') %>
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Gebruikers Beheren</h1>
    <div>
        <a href="/admin/info" class="btn btn-info text-white me-2" title="Algemene Hulp & Info">
            <i class="bi bi-info-circle"></i> Algemene Info
        </a>
        <a href="/admin" class="btn btn-secondary">Terug</a>
    </div>
</div>

<% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger"><%= error %></div>
<% } %>

<div class="card mb-4">
    <div class="card-header">Nieuwe Gebruiker Toevoegen</div>
    <div class="card-body">
        <form action="/admin/users" method="POST">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label>Gebruikersnaam</label>
                    <input type="text" class="form-control" name="username" required>
                </div>
                <div class="col-md-4 mb-3">
                    <label>Wachtwoord</label>
                    <input type="password" class="form-control" name="password" required>
                </div>
                <div class="col-md-4 mb-3">
                    <label>Rol</label>
                    <select class="form-select" name="role">
                        <option value="leader">Leiding (Geen Admin)</option>
                        <option value="admin">Administrator</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Toevoegen</button>
        </form>
    </div>
</div>

<% 
    const activeUsers = users.filter(u => u.isActive !== false);
    const inactiveUsers = users.filter(u => u.isActive === false);
%>

<h3>Actieve Gebruikers</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Gebruikersnaam</th>
            <th>Rol</th>
            <th>Actie</th>
        </tr>
    </thead>
    <tbody>
        <% activeUsers.forEach(u => { %>
            <tr>
                <td><%= capitalizeName(u.username) %></td>
                <td>
                    <% if(u.role === 'admin') { %>
                        <span class="badge bg-danger">Admin</span>
                    <% } else { %>
                        <span class="badge bg-info">Leiding</span>
                    <% } %>
                </td>
                <td>
                    <a href="/admin/users/<%= u.id %>/edit" class="btn btn-sm btn-primary me-2">Bewerken</a>
                    <% if (user.id !== u.id) { %>
                        <form action="/admin/users/<%= u.id %>/toggle-status?_method=PUT" method="POST" style="display:inline;" class="me-1">
                            <button type="submit" class="btn btn-sm btn-warning" title="Zet op non-actief (oud-leiding)">
                                <i class="bi bi-archive"></i> Naar Oud
                            </button>
                        </form>
                        <form action="/admin/users/<%= u.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Zeker weten?');" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                        </form>
                    <% } else { %>
                        <span class="text-muted">(Jezelf)</span>
                    <% } %>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<div class="mt-5">
    <button class="btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#inactiveUsersList" aria-expanded="false" aria-controls="inactiveUsersList">
        <i class="bi bi-clock-history"></i> Toon Oud-Leiding (<%= inactiveUsers.length %>)
    </button>
    
    <div class="collapse mt-3" id="inactiveUsersList">
        <div class="card card-body bg-light">
            <h4 class="text-muted">Oud-Leiding (Inactief)</h4>
            <% if (inactiveUsers.length === 0) { %>
                <p class="text-muted">Geen oud-leiding.</p>
            <% } else { %>
                <table class="table table-sm text-muted">
                    <thead>
                        <tr>
                            <th>Gebruikersnaam</th>
                            <th>Rol</th>
                            <th>Actie</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% inactiveUsers.forEach(u => { %>
                            <tr>
                                <td><%= capitalizeName(u.username) %></td>
                                <td><span class="badge bg-secondary">Oud-Leiding</span></td>
                                <td>
                                    <form action="/admin/users/<%= u.id %>/toggle-status?_method=PUT" method="POST" style="display:inline;" class="me-1">
                                        <button type="submit" class="btn btn-sm btn-success" title="Maak weer actief">
                                            <i class="bi bi-arrow-counterclockwise"></i> Activeren
                                        </button>
                                    </form>
                                    <form action="/admin/users/<%= u.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Definitief verwijderen?');" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>
