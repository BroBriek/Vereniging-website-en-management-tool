<script>
  let currentFolder = '';
  let selectedTable = null;
  let currentPage = 0;
  let recordsPerPage = 50;
  let totalRecords = 0;
  let currentFilePath = null;

  // Tab switching
  function switchTab(event, tabName) {
    event.preventDefault();
    
    // Hide all tabs
    const tabs = document.querySelectorAll('.tab-content');
    tabs.forEach(tab => tab.classList.remove('active'));
    
    // Deactivate all buttons
    const buttons = document.querySelectorAll('.tab-btn');
    buttons.forEach(btn => btn.classList.remove('active'));
    
    // Show selected tab
    document.getElementById(tabName).classList.add('active');
    event.target.classList.add('active');
    
    // Load content if needed
    if (tabName === 'file-explorer' && currentFolder === '') {
      loadFileExplorer();
    } else if (tabName === 'database') {
      if (selectedTable === null) {
        loadTables();
      }
    } else if (tabName === 'logs') {
      refreshPM2Logs();
    } else if (tabName === 'notifications') {
      loadNotificationUsers();
    }
  }

  // ===== FILE EXPLORER =====
  function loadFileExplorer() {
    fetch(`/admin/api/file-explorer?path=${encodeURIComponent(currentFolder)}`)
      .then(r => r.json())
      .then(data => {
        displayFileList(data.items);
      })
      .catch(err => {
        console.error(err);
        document.getElementById('file-list').innerHTML = '<div class="alert error">Fout bij laden van bestanden</div>';
      });
  }

  function displayFileList(items) {
    let html = '';
    
    if (currentFolder !== '') {
      html += `
        <div class="file-item directory" onclick="navigateToFolder('${getParentFolder(currentFolder)}')">
          <div class="file-item-icon">üìÅ</div>
          <div class="file-item-name">..</div>
        </div>
      `;
    }
    
    items.forEach(item => {
      const icon = item.isDirectory ? 'üìÅ' : getFileIcon(item.extension);
      const size = item.size ? formatBytes(item.size) : '-';
      const actions = item.isDirectory ? '' : `
        <div class="file-item-actions">
          <button class="edit-btn" onclick="editFile('${item.path}')">‚úèÔ∏è Edit</button>
          <button class="download-btn" onclick="downloadFile('${item.path}')">‚¨áÔ∏è Download</button>
          <button class="delete-btn" onclick="deleteFile('${item.path}')">üóëÔ∏è Verwijderen</button>
        </div>
      `;
      
      const classes = item.isDirectory ? 'file-item directory' : 'file-item';
      const onclick = item.isDirectory ? `onclick="navigateToFolder('${item.path}')"` : '';
      
      html += `
        <div class="${classes}" ${onclick}>
          <div class="file-item-icon">${icon}</div>
          <div class="file-item-name">${item.name}</div>
          ${item.isDirectory ? '' : `<div class="file-item-size">${size}</div>`}
          ${actions}
        </div>
      `;
    });
    
    document.getElementById('file-list').innerHTML = html;
    updateBreadcrumb();
  }

  function navigateToFolder(path) {
    currentFolder = path;
    loadFileExplorer();
  }

  function getParentFolder(path) {
    const parts = path.split('/');
    parts.pop();
    return parts.join('/');
  }

  function updateBreadcrumb() {
    if (!currentFolder) {
      document.getElementById('breadcrumb-trail').innerHTML = '';
      return;
    }
    
    const parts = currentFolder.split('/');
    let html = '';
    let path = '';
    
    parts.forEach((part, idx) => {
      path += (idx === 0 ? '' : '/') + part;
      html += ` / <button onclick="navigateToFolder('${path}')">${part}</button>`;
    });
    
    document.getElementById('breadcrumb-trail').innerHTML = html;
  }

  function getFileIcon(ext) {
    const icons = {
      '.html': 'üåê',
      '.css': 'üé®',
      '.js': '‚öôÔ∏è',
      '.json': 'üìÑ',
      '.png': 'üñºÔ∏è',
      '.jpg': 'üñºÔ∏è',
      '.gif': 'üñºÔ∏è',
      '.svg': 'üñºÔ∏è',
      '.pdf': 'üìï',
      '.txt': 'üìù'
    };
    return icons[ext] || 'üìÑ';
  }

  function formatBytes(bytes) {
    if (bytes === 0) return '0 Bytes';
    const k = 1024;
    const sizes = ['Bytes', 'KB', 'MB', 'GB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
  }

  function editFile(filePath) {
    currentFilePath = filePath;
    fetch(`/admin/api/file-read?path=${encodeURIComponent(filePath)}`)
      .then(r => r.json())
      .then(data => {
        document.getElementById('editor-filename').textContent = filePath;
        document.getElementById('file-content').value = data.content;
        document.getElementById('file-editor').classList.add('open');
        document.getElementById('file-content').focus();
      })
      .catch(err => alert('Fout bij lezen bestand: ' + err.message));
  }

  function closeFileEditor() {
    document.getElementById('file-editor').classList.remove('open');
    currentFilePath = null;
  }

  function saveFile() {
    const content = document.getElementById('file-content').value;
    fetch('/admin/api/file-save', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ path: currentFilePath, content })
    })
      .then(r => r.json())
      .then(data => {
        showAlert('success', data.message || 'Bestand opgeslagen!');
        closeFileEditor();
      })
      .catch(err => showAlert('error', 'Fout: ' + err.message));
  }

  function deleteFile(filePath) {
    if (!confirm(`Weet je zeker dat je '${filePath}' wilt verwijderen?`)) return;
    
    fetch('/admin/api/file-delete', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ path: filePath })
    })
      .then(r => r.json())
      .then(data => {
        loadFileExplorer();
        showAlert('success', data.message || 'Bestand verwijderd!');
      })
      .catch(err => showAlert('error', 'Fout: ' + err.message));
  }

  function downloadFile(filePath) {
    window.location.href = `/admin/api/file-download?path=${encodeURIComponent(filePath)}`;
  }

  // ===== DATABASE VIEWER =====
  function loadTables() {
    fetch('/admin/api/db-tables')
      .then(r => r.json())
      .then(data => {
        let html = '';
        data.tables.forEach(table => {
          html += `
            <div class="table-item" onclick="selectTable('${table.name}')">
              ${table.name}
            </div>
          `;
        });
        document.getElementById('table-list').innerHTML = html || '<p style="padding: 20px; text-align: center; color: #999;">Geen tabellen gevonden</p>';
      })
      .catch(err => {
        document.getElementById('table-list').innerHTML = '<div class="alert error">Fout bij laden tabellen</div>';
      });
  }

  function selectTable(tableName) {
    selectedTable = tableName;
    document.querySelectorAll('.table-item').forEach(el => el.classList.remove('active'));
    event.target.classList.add('active');
    currentPage = 0;
    loadTableData();
  }

  function loadTableData() {
    if (!selectedTable) return;
    
    recordsPerPage = parseInt(document.getElementById('records-per-page').value);
    const offset = currentPage * recordsPerPage;
    
    fetch(`/admin/api/db-data?tableName=${encodeURIComponent(selectedTable)}&limit=${recordsPerPage}&offset=${offset}`)
      .then(r => r.json())
      .then(data => {
        totalRecords = data.total;
        displayTableData(data.data);
        updatePagination();
      })
      .catch(err => {
        document.getElementById('table-data').innerHTML = '<div class="alert error">Fout bij laden tabelgegevens</div>';
      });
  }

  function displayTableData(rows) {
    if (rows.length === 0) {
      document.getElementById('table-data').innerHTML = '<p style="padding: 20px; text-align: center; color: #999;">Geen gegevens gevonden</p>';
      return;
    }
    
    const columns = Object.keys(rows[0]);
    let html = '<table><thead><tr>';
    
    columns.forEach(col => {
      html += `<th>${col}</th>`;
    });
    html += '<th>Acties</th></tr></thead><tbody>';
    
    rows.forEach(row => {
      html += '<tr>';
      columns.forEach(col => {
        let value = row[col];
        if (typeof value === 'object') {
          value = JSON.stringify(value).substring(0, 50) + '...';
        }
        html += `<td>${escapeHtml(value)}</td>`;
      });
      html += `
        <td class="action-buttons">
          <button class="edit-row" onclick="editRecord('${selectedTable}', ${row.id})">‚úèÔ∏è Bewerk</button>
          <button class="delete-row" onclick="deleteRecord('${selectedTable}', ${row.id})">üóëÔ∏è Verwijder</button>
        </td>
      </tr>`;
    });
    
    html += '</tbody></table>';
    document.getElementById('table-data').innerHTML = html;
  }

  function updatePagination() {
    const totalPages = Math.ceil(totalRecords / recordsPerPage);
    if (totalPages <= 1) {
      document.getElementById('pagination').style.display = 'none';
      return;
    }
    
    let html = '';
    
    if (currentPage > 0) {
      html += `<button onclick="currentPage = 0; loadTableData();">‚¨ÖÔ∏è Eerste</button>`;
      html += `<button onclick="currentPage--; loadTableData();">< Vorige</button>`;
    }
    
    html += `<span>Pagina ${currentPage + 1} van ${totalPages}</span>`;
    
    if (currentPage < totalPages - 1) {
      html += `<button onclick="currentPage++; loadTableData();">Volgende ></button>`;
      html += `<button onclick="currentPage = ${totalPages - 1}; loadTableData();">Laatste ‚û°Ô∏è</button>`;
    }
    
    document.getElementById('pagination').innerHTML = html;
    document.getElementById('pagination').style.display = 'flex';
  }

  function editRecord(tableName, id) {
    // Voor nu, toon een simpele prompt
    const newValue = prompt('Voer de nieuwe waarde in:');
    if (newValue === null) return;
    
    // Dit zou verder uitgebreid kunnen worden met een betere editor
    alert('Geavanceerde record editing kan hier ge√Ømplementeerd worden');
  }

  function deleteRecord(tableName, id) {
    if (!confirm('Weet je zeker dat je dit record wilt verwijderen?')) return;
    
    fetch('/admin/api/db-delete', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ tableName, id })
    })
      .then(r => r.json())
      .then(data => {
        showAlert('success', data.message);
        loadTableData();
      })
      .catch(err => showAlert('error', 'Fout: ' + err.message));
  }

  // ===== PM2 LOGS =====
  function refreshPM2Logs() {
    const container = document.getElementById('logs-content');
    container.innerHTML = '<div style="padding: 20px; text-align: center; color: #999;">Laden... <div class="loading"></div></div>';
    
    fetch('/admin/api/pm2-logs?lines=100')
      .then(r => r.json())
      .then(data => {
        if (data.error) {
          container.innerHTML = `<div class="alert info">${data.message}</div>`;
          return;
        }
        
        let html = '';
        for (const [processName, logData] of Object.entries(data.processes)) {
          if (logData.error) {
            html += `
              <div class="log-process">
                <div class="log-process-header">
                  <span>${processName}</span>
                  <span class="log-process-status stopped">FOUT</span>
                </div>
                <div style="padding: 15px; color: #e74c3c;">Fout: ${logData.error}</div>
              </div>
            `;
          } else {
            html += `
              <div class="log-process">
                <div class="log-process-header">
                  <span>${processName} (PID: ${logData.pid})</span>
                  <span class="log-process-status ${logData.status === 'online' ? 'online' : 'stopped'}">${logData.status.toUpperCase()}</span>
                </div>
                <div class="log-content">${escapeHtml(logData.stdout || 'Geen logs beschikbaar')}</div>
              </div>
            `;
          }
        }
        
        container.innerHTML = html || '<div style="padding: 20px; text-align: center; color: #999;">Geen processen gevonden</div>';
      })
      .catch(err => {
        container.innerHTML = `<div class="alert error">Fout bij laden logs: ${err.message}</div>`;
      });
  }

  // ===== NOTIFICATIONS =====
  function loadNotificationUsers() {
    fetch('/admin/api/notification-users')
      .then(r => r.json())
      .then(data => {
        let html = '<option value="">-- Selecteer een gebruiker --</option>';
        data.users.forEach(user => {
          html += `<option value="${user.id}">${user.username} (${user.email || 'geen email'})</option>`;
        });
        document.getElementById('notif-user').innerHTML = html;
      })
      .catch(err => {
        showAlert('error', 'Fout bij laden gebruikers: ' + err.message);
      });
  }

  function sendTestNotification() {
    const userId = document.getElementById('notif-user').value;
    const title = document.getElementById('notif-title').value;
    const body = document.getElementById('notif-body').value;
    const tag = document.getElementById('notif-tag').value;
    
    if (!userId || !title || !body) {
      showAlert('error', 'Vul alstublieft alle verplichte velden in');
      return;
    }
    
    const feedback = document.getElementById('notif-feedback');
    feedback.innerHTML = '<div class="loading"></div> Notificatie verzenden...';
    feedback.style.display = 'block';
    
    fetch('/admin/api/notification-send', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ userId, title, body, tag })
    })
      .then(r => r.json())
      .then(data => {
        if (data.success) {
          showAlert('success', data.message);
          document.getElementById('notif-title').value = '';
          document.getElementById('notif-body').value = '';
          document.getElementById('notif-tag').value = '';
        } else {
          showAlert('error', data.error || 'Er ging iets mis');
        }
        feedback.style.display = 'none';
      })
      .catch(err => {
        showAlert('error', 'Fout: ' + err.message);
        feedback.style.display = 'none';
      });
  }

  // ===== UTILITIES =====
  function escapeHtml(text) {
    if (text === null || text === undefined) return '';
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  function showAlert(type, message) {
    const alertId = 'alert-' + Date.now();
    const html = `<div id="${alertId}" class="alert ${type}">${message}</div>`;
    
    // Show in the first available alert container, or create a temp one
    let container = document.querySelector('.notification-form');
    if (!container) container = document.querySelector('.tab-content.active');
    if (!container) container = document.body;
    
    const el = document.createElement('div');
    el.innerHTML = html;
    container.insertBefore(el.firstElementChild, container.firstChild);
    
    setTimeout(() => {
      const alert = document.getElementById(alertId);
      if (alert) alert.remove();
    }, 5000);
  }

  // Initial load for file explorer
  document.addEventListener('DOMContentLoaded', loadFileExplorer);
</script>

