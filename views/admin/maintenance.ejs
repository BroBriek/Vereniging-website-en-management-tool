<script>
  let currentFolder = '';
  let selectedTable = null;
  let currentPage = 0;
  let recordsPerPage = 50;
  let totalRecords = 0;
  let currentFilePath = null;

  // Tab switching
  function switchTab(event, tabName) {
    event.preventDefault();
    
    // Hide all tabs
    const tabs = document.querySelectorAll('.tab-content');
    tabs.forEach(tab => tab.classList.remove('active'));
    
    // Deactivate all buttons
    const buttons = document.querySelectorAll('.tab-btn');
    buttons.forEach(btn => btn.classList.remove('active'));
    
    // Show selected tab
    document.getElementById(tabName).classList.add('active');
    event.target.classList.add('active');
    
    // Load content if needed
    if (tabName === 'file-explorer' && currentFolder === '') {
      loadFileExplorer();
    } else if (tabName === 'database') {
      if (selectedTable === null) {
        loadTables();
      }
    } else if (tabName === 'logs') {
      refreshPM2Logs();
    } else if (tabName === 'notifications') {
      loadNotificationUsers();
    }
  }

  // ===== FILE EXPLORER =====
  function loadFileExplorer() {
    fetch(`/admin/api/file-explorer?path=${encodeURIComponent(currentFolder)}`)
      .then(r => r.json())
      .then(data => {
        displayFileList(data.items);
      })
      .catch(err => {
        console.error(err);
        document.getElementById('file-list').innerHTML = '<div class="alert error">Fout bij laden van bestanden</div>';
      });
  }

  function displayFileList(items) {
    let html = '';
    
    if (currentFolder !== '') {
      html += `
        <div class="file-item directory" onclick="navigateToFolder('${getParentFolder(currentFolder)}')">
          <div class="file-item-icon">üìÅ</div>
          <div class="file-item-name">..</div>
        </div>
      `;
    }
    
    items.forEach(item => {
      const icon = item.isDirectory ? 'üìÅ' : getFileIcon(item.extension);
      const size = item.size ? formatBytes(item.size) : '-';
      const actions = item.isDirectory ? '' : `
        <div class="file-item-actions">
          <button class="edit-btn" onclick="editFile('${item.path}')">‚úèÔ∏è Edit</button>
          <button class="download-btn" onclick="downloadFile('${item.path}')">‚¨áÔ∏è Download</button>
          <button class="delete-btn" onclick="deleteFile('${item.path}')">üóëÔ∏è Verwijderen</button>
        </div>
      `;
      
      const classes = item.isDirectory ? 'file-item directory' : 'file-item';
      const onclick = item.isDirectory ? `onclick="navigateToFolder('${item.path}')"` : '';
      
      html += `
        <div class="${classes}" ${onclick}>
          <div class="file-item-icon">${icon}</div>
          <div class="file-item-name">${item.name}</div>
          ${item.isDirectory ? '' : `<div class="file-item-size">${size}</div>`}
          ${actions}
        </div>
      `;
    });
    
    document.getElementById('file-list').innerHTML = html;
    updateBreadcrumb();
  }

  function navigateToFolder(path) {
    currentFolder = path;
    loadFileExplorer();
  }

  function getParentFolder(path) {
    const parts = path.split('/');
    parts.pop();
    return parts.join('/');
  }

  function updateBreadcrumb() {
    if (!currentFolder) {
      document.getElementById('breadcrumb-trail').innerHTML = '';
      return;
