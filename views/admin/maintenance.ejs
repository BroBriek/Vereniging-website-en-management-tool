  function displayTableData(rows) {
    if (rows.length === 0) {
      document.getElementById('table-data').innerHTML = '<p style="padding: 20px; text-align: center; color: #999;">Geen gegevens gevonden</p>';
      return;
    }
    
    const columns = Object.keys(rows[0]);
    let html = '<table><thead><tr>';
    
    columns.forEach(col => {
      html += `<th>${col}</th>`;
    });
    html += '<th>Acties</th></tr></thead><tbody>';
    
    rows.forEach(row => {
      html += '<tr>';
      columns.forEach(col => {
        let value = row[col];
        if (typeof value === 'object') {
          value = JSON.stringify(value).substring(0, 50) + '...';
        }
        html += `<td>${escapeHtml(value)}</td>`;
      });
      html += `
        <td class="action-buttons">
          <button class="edit-row" onclick="editRecord('${selectedTable}', ${row.id})">‚úèÔ∏è Bewerk</button>
          <button class="delete-row" onclick="deleteRecord('${selectedTable}', ${row.id})">üóëÔ∏è Verwijder</button>
        </td>
      </tr>`;
    });
    
    html += '</tbody></table>';
    document.getElementById('table-data').innerHTML = html;
  }

  function updatePagination() {
    const totalPages = Math.ceil(totalRecords / recordsPerPage);
    if (totalPages <= 1) {
      document.getElementById('pagination').style.display = 'none';
      return;
    }
    
    let html = '';
    
    if (currentPage > 0) {
      html += `<button onclick="currentPage = 0; loadTableData();">‚¨ÖÔ∏è Eerste</button>`;
      html += `<button onclick="currentPage--; loadTableData();">< Vorige</button>`;
    }
    
    html += `<span>Pagina ${currentPage + 1} van ${totalPages}</span>`;
    
    if (currentPage < totalPages - 1) {
      html += `<button onclick="currentPage++; loadTableData();">Volgende ></button>`;
      html += `<button onclick="currentPage = ${totalPages - 1}; loadTableData();">Laatste ‚û°Ô∏è</button>`;
    }
    
    document.getElementById('pagination').innerHTML = html;
    document.getElementById('pagination').style.display = 'flex';
  }

  function editRecord(tableName, id) {
    // Get the row data from the table
    const table = document.querySelector('.table-data table');
    let rowData = null;
    
    table.querySelectorAll('tbody tr').forEach(row => {
      const cells = row.querySelectorAll('td');
      if (cells.length > 0) {
        // Get the first column value (usually id), need to match with our id
        const firstCell = cells[0].textContent.trim();
        // For safety, we'll fetch the data from the API instead
      }
    });
    
    // Show loading state
    const modal = document.getElementById('edit-modal');
    const fieldsContainer = document.getElementById('modal-fields');
    fieldsContainer.innerHTML = '<div style="text-align: center; padding: 20px;"><div class="loading"></div> Laden...</div>';
    modal.classList.add('active');
    
    // Store the current editing context
    window.editingContext = {
      tableName: tableName,
      id: id,
      originalData: null
    };
  
    // Fetch table structure and current record data
    Promise.all([
      fetch(`/admin/api/db-data?tableName=${encodeURIComponent(tableName)}&limit=1&offset=0`).then(r => r.json()),
      fetch(`/admin/api/db-data?tableName=${encodeURIComponent(tableName)}&limit=1000&offset=0`).then(r => r.json())
    ])
      .then(([structureData, fullData]) => {
        // Find the specific record
        const record = fullData.data.find(row => row.id === id);
        
        if (!record) {
          fieldsContainer.innerHTML = '<div style="padding: 20px; color: #e74c3c;">Record niet gevonden</div>';
          return;
        }
        
        window.editingContext.originalData = { ...record };
        
        // Generate form fields
        const columns = Object.keys(record);
        let html = '';
        
        columns.forEach(col => {
          const value = record[col] !== null ? record[col] : '';
          const isLongText = typeof value === 'string' && value.length > 50;
          const inputType = isLongText ? 'textarea' : 'input';
          
          html += `
            <div class="modal-field">
              <label for="field-${col}">${col}</label>
              ${inputType === 'textarea' 
                ? `<textarea id="field-${col}" data-column="${col}">${escapeHtml(value)}</textarea>`
                : `<input type="text" id="field-${col}" data-column="${col}" value="${escapeHtml(value)}" />`
              }
            </div>
          `;
        });
        
        fieldsContainer.innerHTML = html;
      })
      .catch(err => {
        console.error(err);
        fieldsContainer.innerHTML = '<div style="padding: 20px; color: #e74c3c;">Fout bij laden van record: ' + err.message + '</div>';
      });
  }

  function closeEditModal() {
    document.getElementById('edit-modal').classList.remove('active');
    window.editingContext = null;
  }

  function saveEditedRecord() {
    if (!window.editingContext) {
      closeEditModal();
      return;
    }
    
    const { tableName, id, originalData } = window.editingContext;
    const updates = {};
    let hasChanges = false;
    
    // Collect all field values
    document.querySelectorAll('#modal-fields [data-column]').forEach(field => {
      const column = field.getAttribute('data-column');
      const newValue = field.value;
      const oldValue = originalData[column];
      
      // Convert to string for comparison since inputs are always strings
      const strOldValue = oldValue === null || oldValue === undefined ? '' : String(oldValue);
      
      if (newValue !== strOldValue) {
        updates[column] = newValue;
        hasChanges = true;
      }
    });
    
    if (!hasChanges) {
      showAlert('info', 'Geen wijzigingen aangebracht');
      closeEditModal();
      return;
    }
    
    // Send update request
    fetch('/admin/api/db-update', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ tableName, id, updates })
    })
      .then(r => r.json())
      .then(data => {
        if (data.success) {
          showAlert('success', data.message || 'Record succesvol bijgewerkt');
          closeEditModal();
          loadTableData();
        } else {
          showAlert('error', data.error || 'Fout bij bijwerken');
        }
      })
      .catch(err => {
        showAlert('error', 'Fout: ' + err.message);
      });
  }

  function deleteRecord(tableName, id) {
