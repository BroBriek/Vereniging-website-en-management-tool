<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
    <meta name="keywords" content="Chiro Meeuwen, Chiro Vreugdeland, jeugdbeweging, jeugdorganisatie, kinderen activiteiten, Meeuwen">
    <title><%= typeof title !== 'undefined' ? title : 'Chiro Vreugdeland Meeuwen - Jeugdbeweging Meeuwen' %></title>
    <meta name="description" content="<%= typeof description !== 'undefined' ? description : 'Chiro Vreugdeland Meeuwen: jeugdbeweging voor kinderen in Meeuwen. Elke zondag spelen, activiteiten, vriendschap en plezier.' %>">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://www.chiromeeuwen.be<%= typeof currentPath !== 'undefined' ? currentPath : '' %>">
    <meta property="og:title" content="<%= typeof title !== 'undefined' ? title : 'Chiro Vreugdeland Meeuwen - Jeugdbeweging Meeuwen' %>">
    <meta property="og:description" content="<%= typeof description !== 'undefined' ? description : 'Chiro Vreugdeland Meeuwen: jeugdbeweging voor kinderen in Meeuwen. Elke zondag spelen, activiteiten, vriendschap en plezier.' %>">
    <meta property="og:image" content="https://www.chiromeeuwen.be/og-image.png">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:locale" content="nl_BE">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://www.chiromeeuwen.be<%= typeof currentPath !== 'undefined' ? currentPath : '' %>">
    <meta property="twitter:title" content="<%= typeof title !== 'undefined' ? title : 'Chiro Vreugdeland Meeuwen - Jeugdbeweging Meeuwen' %>">
    <meta property="twitter:description" content="<%= typeof description !== 'undefined' ? description : 'Chiro Vreugdeland Meeuwen: jeugdbeweging voor kinderen in Meeuwen. Elke zondag spelen, activiteiten, vriendschap en plezier.' %>">
    <meta property="twitter:image" content="https://www.chiromeeuwen.be/og-image.png">

    <!-- Canonical Tag -->
    <link rel="canonical" href="https://www.chiromeeuwen.be<%= typeof currentPath !== 'undefined' ? currentPath : '' %>" />

    <!-- Structured Data: Organization & LocalBusiness -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": ["Organization", "LocalBusiness"],
      "name": "Chiro Vreugdeland Meeuwen",
      "alternateName": "Chiro Meeuwen",
      "description": "Chiro Vreugdeland Meeuwen is een jeugdbeweging in Meeuwen met activiteiten voor kinderen van alle leeftijden.",
      "url": "https://www.chiromeeuwen.be",
      "logo": "https://www.chiromeeuwen.be/favicon.png",
      "image": "https://www.chiromeeuwen.be/og-image.png",
      "keywords": "Chiro, jeugdbeweging, Meeuwen, kinderen, activiteiten",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Kloosterstraat 5",
        "addressLocality": "Meeuwen",
        "addressRegion": "Limburg",
        "postalCode": "3670",
        "addressCountry": "BE"
      },
      "email": "Chiromeeuwen@outlook.com",
      "sameAs": [
        "https://www.facebook.com/ChiroVreugdelandMeeuwen"
      ]
    }
    </script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@300;400;500;600;700&family=Patrick+Hand&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#db3e41">
    <link rel="apple-touch-icon" href="/favicon.png">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">CHIRO VREUGDELAND</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-label="Navigatie wisselen">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/praktisch">Praktisch</a></li>
                    <li class="nav-item"><a class="nav-link" href="/afdelingen">Afdelingen</a></li>
                    <li class="nav-item"><a class="nav-link" href="/leiding">Leiding</a></li>
                    <li class="nav-item"><a class="nav-link" href="/kalender">Kalender</a></li>
                    <li class="nav-item"><a class="nav-link" href="/t-shirts">T-Shirts</a></li>
                    <li class="nav-item"><a class="nav-link" href="/inschrijven">Inschrijven</a></li>
                    <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
                    <% if (user) { %>
                        <% if (user.role === 'admin') { %>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Admin</a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="/admin">Dashboard</a></li>
                                    <li><a class="dropdown-item" href="/feed">Leidingshoekje</a></li>
                                    <li><a class="dropdown-item" href="/account/settings">Instellingen</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/auth/logout">Uitloggen</a></li>
                                </ul>
                            </li>
                        <% } else { %>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"><%= capitalizeName(user.username) %></a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="/feed">Leidingshoekje</a></li>
                                    <li><a class="dropdown-item" href="/account/settings">Instellingen</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/auth/logout">Uitloggen</a></li>
                                </ul>
                            </li>
                        <% } %>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        
    <!-- Global Alert System -->
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <script>
    if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('/sw.js').catch(function(){});
    }
    </script>