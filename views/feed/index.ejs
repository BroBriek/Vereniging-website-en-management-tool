let formFields = [];
function addFormFieldConfirm() {
    const label = document.getElementById('newFieldLabel').value;
    const type = document.getElementById('newFieldType').value;
    if(!label) { alert("Geef een naam op!"); return; }
    formFields.push({ label, type });
    renderFormBuilder();
    const modalEl = document.getElementById('addFieldModal');
    const modal = bootstrap.Modal.getInstance(modalEl);
    modal.hide();
    document.getElementById('newFieldLabel').value = '';
}
function renderFormBuilder() {
    const container = document.getElementById('formBuilderPreview');
    container.innerHTML = '';
    formFields.forEach((f, i) => {
        const div = document.createElement('div');
        div.className = 'badge bg-secondary me-1 mb-1 p-2 fw-normal';
        div.innerHTML = `${f.label} <small class="opacity-75">(${f.type})</small> <span style="cursor:pointer; margin-left:5px;" onclick="removeField(${i})">&times;</span>`;
        container.appendChild(div);
    });
}
function removeField(index) {
    if(confirm('Verwijder dit veld?')) {
        formFields.splice(index, 1);
        renderFormBuilder();
    }
}
function saveFormSchema() {
    if(formFields.length > 0) {
        document.getElementById('formSchemaJson').value = JSON.stringify(formFields);
    }
}

document.addEventListener('DOMContentLoaded', function() {
    const likeForms = document.querySelectorAll('.like-form');
    likeForms.forEach(form => {
        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            const btn = this.querySelector('button');
            const icon = btn.querySelector('i');
            const countSpan = btn.querySelector('.like-count');
            const likersSpan = this.parentElement.querySelector('.likers-list');
            try {
                const response = await fetch(this.action, {
                    method: 'POST',
                    headers: {'Accept': 'application/json', 'X-Requested-With': 'XMLHttpRequest'}
                });
                if (response.ok) {
                    const data = await response.json();
                    if (data.liked) {
                        btn.classList.remove('text-muted'); btn.classList.add('text-danger');
                        icon.classList.remove('bi-heart'); icon.classList.add('bi-heart-fill');
                    } else {
                        btn.classList.remove('text-danger'); btn.classList.add('text-muted');
                        icon.classList.remove('bi-heart-fill'); icon.classList.add('bi-heart');
                    }
                    countSpan.textContent = data.count > 0 ? data.count : '';
                    if (likersSpan && data.likers) likersSpan.textContent = data.likers.join(', ');
                }
            } catch (error) { 
                console.error('Like failed via AJAX, falling back to form submit', error);
                this.submit(); 
            }
        });
    });

    // Check for long posts
    document.querySelectorAll('.post-text-container').forEach(container => {
        if (container.scrollHeight > 200) {
            container.classList.add('post-content-collapsed');
            const id = container.id.replace('post-text-container-', '');
            const btn = document.getElementById('read-more-btn-' + id);
            if (btn) btn.classList.remove('d-none');
        }
    });
});

function expandPost(id) {
    const container = document.getElementById('post-text-container-' + id);
    const btn = document.getElementById('read-more-btn-' + id);
    if (container) container.classList.remove('post-content-collapsed');
    if (btn) btn.remove();
}
