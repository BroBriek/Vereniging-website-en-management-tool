<% posts.forEach(post => { 
    const avatarColor = getAvatarColor(post.author ? post.author.username : '');
    const initials = getInitials(post.author ? post.author.username : '');
%>
    <div class="card post-card mb-4" id="post-<%= post.id %>">
        <div class="card-header bg-transparent border-0 pt-3 pb-0 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <% if (post.author && post.author.profilePicture) { %>
                    <img src="<%= post.author.profilePicture %>" class="rounded-circle me-3 border shadow-sm" style="width: 45px; height: 45px; object-fit: cover;" alt="<%= capitalizeName(post.author.username) %>">
                <% } else { %>
                    <div class="avatar-circle me-3" style="background-color: <%= avatarColor %>;">
                        <%= initials %>
                    </div>
                <% } %>
                <div>
                    <h6 class="mb-0 fw-bold"><%= post.author ? capitalizeName(post.author.username) : 'Onbekend' %></h6>
                    <small class="text-muted" style="font-size: 0.8rem;">
                        <%= new Date(post.createdAt).toLocaleDateString('nl-NL', { day: 'numeric', month: 'long', hour: '2-digit', minute: '2-digit' }) %>
                    </small>
                </div>
            </div>
            <% if ((post.author && user && post.author.id === user.id) || user.role === 'admin') { %>
                <div class="dropdown">
                    <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown" aria-label="Opties voor bericht">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                        <li><a class="dropdown-item" href="#" onclick="enableEditMode('<%= post.id %>')"><i class="bi bi-pencil me-2"></i>Bewerken</a></li>
                        <li>
                            <form action="/feed/post/<%= post.id %>/delete" method="POST" onsubmit="return confirm('Post verwijderen?');">
                                <button type="submit" class="dropdown-item text-danger"><i class="bi bi-trash me-2"></i>Verwijderen</button>
                            </form>
                        </li>
                    </ul>
                </div>
            <% } %>
        </div>

        <div class="card-body">
            <!-- Post Content -->
            <div id="post-content-view-<%= post.id %>" class="mb-3">
                <div id="post-text-container-<%= post.id %>" class="post-text-container">
                    <p class="card-text text-dark" style="white-space: pre-line; font-size: 1.05rem;"><%- highlightMentions(post.content) %></p>
                </div>
                <button id="read-more-btn-<%= post.id %>" class="btn btn-link btn-sm p-0 text-decoration-none d-none mt-1 fw-bold" onclick="expandPost('<%= post.id %>')">
                    Meer weergeven <i class="bi bi-chevron-down"></i>
                </button>
            </div>

            <div id="post-content-edit-<%= post.id %>" class="d-none mb-3">
                <form action="/feed/post/<%= post.id %>/update" method="POST">
                    <textarea class="form-control mb-2" name="content" rows="3"><%= post.content %></textarea>
                    <button type="submit" class="btn btn-sm btn-success rounded-pill">Opslaan</button>
                    <button type="button" class="btn btn-sm btn-light rounded-pill" onclick="disableEditMode('<%= post.id %>')">Annuleren</button>
                </form>
            </div>

            <!-- Attachments -->
            <% if (post.attachments && post.attachments.length > 0) { %>
                <div class="mb-3 d-flex flex-wrap gap-2">
                    <% post.attachments.forEach(file => { %>
                        <a href="<%= file.path %>" target="_blank" class="btn btn-light btn-sm border text-primary">
                            <i class="bi bi-file-earmark-text me-1"></i> <%= file.originalName %>
                        </a>
                    <% }) %>
                </div>
            <% } %>

            <!-- Polls & Forms -->
            <% if (post.poll) { %>
                <div class="bg-light p-3 rounded-3 mb-3 border">
                    <h6 class="font-playful mb-3"><i class="bi bi-bar-chart-fill text-primary me-2"></i><%= post.poll.question %></h6>
                    <% 
                        const totalVotes = post.responses.filter(r => r.type === 'poll').length;
                        const counts = {};
                        const voters = {}; 
                        post.poll.options.forEach((opt, idx) => { counts[idx] = 0; voters[idx] = []; });
                        let myVotes = [];
                        post.responses.filter(r => r.type === 'poll').forEach(r => {
                            let indices = Array.isArray(r.data.optionIndices) ? r.data.optionIndices : (r.data.optionIndex !== undefined ? [parseInt(r.data.optionIndex)] : []);
                            indices.forEach(idx => {
                                if (counts[idx] !== undefined) {
                                    counts[idx]++;
                                    if(r.user) voters[idx].push(capitalizeName(r.user.username));
                                }
                            });
                            if (r.userId === user.id) myVotes = indices;
                        });
                    %>
                    <form action="/feed/respond" method="POST">
                        <input type="hidden" name="postId" value="<%= post.id %>">
                        <input type="hidden" name="type" value="poll">
                        <% post.poll.options.forEach((option, index) => { 
                            const count = counts[index] || 0;
                            const pct = totalVotes > 0 ? Math.round((count / totalVotes) * 100) : 0;
                            const isChecked = myVotes.includes(index) ? 'checked' : '';
                        %>
                            <div class="mb-2">
                                <div class="d-flex justify-content-between font-monospace small mb-1">
                                    <span><%= option %></span>
                                    <span><%= count %></span>
                                </div>
                                <div class="d-flex align-items-center">
                                    <div class="me-2">
                                        <% if (post.poll.allowMultiple) { %>
                                            <input class="form-check-input" type="checkbox" name="data[optionIndex][]" value="<%= index %>" <%= isChecked %> aria-label="<%= option %>">
                                        <% } else { %>
                                            <input class="form-check-input" type="radio" name="data[optionIndex]" value="<%= index %>" <%= isChecked %> aria-label="<%= option %>">
                                        <% } %>
                                    </div>
                                    <div class="flex-grow-1 poll-bar position-relative">
                                        <div class="bg-primary h-100" style="width: <%= pct %>%; transition: width 0.5s;"></div>
                                    </div>
                                </div>
                                <% if(voters[index].length > 0) { %>
                                    <div class="small text-muted mt-1 ms-4" style="font-size: 0.75rem;">
                                        <%= voters[index].join(', ') %>
                                    </div>
                                <% } %>
                            </div>
                        <% }) %>
                        <button type="submit" class="btn btn-primary btn-sm rounded-pill mt-2">Stemmen</button>
                    </form>
                </div>
            <% } %>

            <% if (post.form) { %>
                <div class="card border-info mb-3">
                    <div class="card-header bg-info text-white py-1 small fw-bold">Formulier</div>
                    <div class="card-body p-3">
                        <% const myResponse = post.responses.find(r => r.userId === user.id && r.type === 'form'); %>
                        <% if (myResponse) { %>
                            <div class="badge bg-success mb-2">Ingevuld!</div>
                        <% } %>
                        <form action="/feed/respond" method="POST">
                            <input type="hidden" name="postId" value="<%= post.id %>">
                            <input type="hidden" name="type" value="form">
                            <% post.form.forEach((field, idx) => { %>
                                <div class="mb-2">
                                    <label class="form-label small fw-bold mb-0"><%= field.label %></label>
                                    <% if (field.type === 'text') { %>
                                        <input type="text" class="form-control form-control-sm" name="data[<%= field.label %>]" required aria-label="<%= field.label %>">
                                    <% } else if (field.type === 'checkbox') { %>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="data[<%= field.label %>]" value="Ja" aria-label="<%= field.label %>">
                                            <label class="form-check-label small">Ja</label>
                                        </div>
                                    <% } %>
                                </div>
                            <% }) %>
                            <button type="submit" class="btn btn-sm btn-primary rounded-pill mt-2" <%= myResponse ? 'disabled' : '' %>>Verstuur</button>
                        </form>
                        <hr class="my-2">
                        <a class="text-decoration-none small text-muted" data-bs-toggle="collapse" href="#results-<%= post.id %>">
                            <i class="bi bi-eye"></i> Bekijk <%= post.responses.filter(r => r.type === 'form').length %> inzendingen
                        </a>
                        <div class="collapse mt-2" id="results-<%= post.id %>">
                            <div class="bg-light rounded p-2 small">
                                <% post.responses.filter(r => r.type === 'form').forEach(r => { %>
                                    <div class="mb-1">
                                        <strong class="text-dark"><%= r.user ? capitalizeName(r.user.username) : 'Onbekend' %></strong>:
                                        <span class="text-muted"><%= typeof r.data === 'object' ? JSON.stringify(r.data).replace(/[{"}]/g, '').replace(/:/g, ': ') : r.data %></span>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>

            <!-- Action Bar (Likes & Comment Count) -->
            <div class="d-flex align-items-center justify-content-between mt-3 pt-3 border-top">
                <div class="d-flex align-items-center">
                    <% 
                        const likes = post.likes || [];
                        const isLiked = likes.some(l => l.userId === user.id);
                        const likeCount = likes.length;
                        const likerNames = likes.map(l => l.user ? capitalizeName(l.user.username) : 'Onbekend').join(', ');
                    %>
                    <form action="/feed/post/<%= post.id %>/like" method="POST" class="like-form" data-post-id="<%= post.id %>">
                        <button type="submit" class="btn btn-action d-flex align-items-center <%= isLiked ? 'text-danger' : 'text-muted' %> bg-transparent border-0 p-0 me-3" aria-label="Vind ik leuk">
                            <i class="bi <%= isLiked ? 'bi-heart-fill' : 'bi-heart' %> fs-5 me-1"></i>
                            <span class="fw-bold like-count"><%= likeCount > 0 ? likeCount : '' %></span>
                        </button>
                    </form>
                    <% if (likeCount > 0) { %>
                        <small class="text-muted likers-list" style="font-size: 0.8rem; max-width: 200px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;"><%= likerNames %></small>
                    <% } else { %>
                        <small class="text-muted likers-list"></small>
                    <% } %>
                </div>
                <div class="text-muted small">
                    <%= post.comments.length %> reacties
                </div>
            </div>
        </div>

        <!-- Comments Section -->
        <div class="bg-light bg-opacity-50 p-3 rounded-bottom-4">
            <% 
                const visibleComments = post.comments.slice(0, 3);
                const hiddenComments = post.comments.slice(3);
            %>

            <% visibleComments.forEach(comment => { %>
                <%- include('comment_partial', { comment: comment, user: user, post: post }) %>
            <% }) %>

            <% if (hiddenComments.length > 0) { %>
                <div class="collapse" id="hidden-comments-<%= post.id %>">
                    <% hiddenComments.forEach(comment => { %>
                        <%- include('comment_partial', { comment: comment, user: user, post: post }) %>
                    <% }) %>
                </div>
                <button class="btn btn-link btn-sm text-decoration-none text-muted ps-0" type="button" data-bs-toggle="collapse" data-bs-target="#hidden-comments-<%= post.id %>">
                    Toon meer reacties...
                </button>
            <% } %>

            <!-- New Comment Input -->
            <form action="/feed/comment" method="POST" class="mt-3 d-flex align-items-center">
                <% if (user.profilePicture) { %>
                    <img src="<%= user.profilePicture %>" class="rounded-circle me-2 border shadow-sm" style="width: 32px; height: 32px; object-fit: cover;" alt="<%= capitalizeName(user.username) %>">
                <% } else { %>
                    <div class="avatar-circle me-2" style="background-color: <%= getAvatarColor(user.username) %>; width: 32px; height: 32px; font-size: 0.8rem;">
                        <%= getInitials(user.username) %>
                    </div>
                <% } %>
                <input type="hidden" name="postId" value="<%= post.id %>">
                <input type="text" name="content" class="form-control rounded-pill border-0 bg-white shadow-sm" placeholder="Schrijf een reactie..." required>
                <button class="btn btn-link text-primary" type="submit" aria-label="Verstuur reactie"><i class="bi bi-send-fill"></i></button>
            </form>
        </div>
    </div>
<% }) %>